.headroom 
    position fixed
    top  0
    left 0
    right 0
    transition all .2s ease-in-out

.headroom--unpinned
    top -100px

.headroom--pinned
    top 0

#nav
    background #292f36
    line-height 54px
    top 0
    left 0
    width 100%
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box
    -webkit-box-shadow 0 0 8px rgba(0,0,0,0.5)
    box-shadow 0 0 8px rgba(0,0,0,0.5)
    z-index 100
    font-size 16px

